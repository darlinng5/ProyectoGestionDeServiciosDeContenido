@model SmartAdminMvc.Models.insidentesModelo

@{
    ViewBag.Title = "asignarUsuario";
}



@using (Html.BeginForm()) 
{
    @Html.AntiForgeryToken()
    
    <div class="form-horizontal">
       
        <hr />
        @Html.ValidationSummary(true, "", new { @class = "text-danger" })

        <div class="form-group">
            @Html.Label("Asignar Usuario", htmlAttributes: new { @class = "control-label col-md-2" })
            <div class="col-md-10">
                @if (ViewBag.usuarios != null)
                {
                    @Html.DropDownListFor(model => model.idUsuarioCreoInsidente, (SelectList)ViewBag.usuarios, "Seleccione un usuario para asignar", htmlAttributes: new { @class = "form-control", @required = "required" })

                }
                @Html.ValidationMessageFor(model => model.idUsuarioCreoInsidente, "", new { @class = "text-danger" })
            </div>
        </div>

        <div class="form-group">
            <div class="col-md-offset-2 col-md-10">
                <input type="submit" value="Create" class="btn btn-default" />
            </div>
        </div>
    </div>
}

<div>
    @Html.ActionLink("Back to List", "Index")
</div>
