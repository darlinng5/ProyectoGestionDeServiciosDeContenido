@model IEnumerable<SmartAdminMvc.Models.respuestaModelo>


<style>
    .azul {
        background-color: lightblue;
        margin-left: 5%;
        margin-right: 25%;
        margin-bottom: 2%;
    }

    .verde {
        background-color: lightgreen;
        margin-left: 25%;
        margin-right: 5%;
        margin-bottom: 2%;
    }

    .smaller-image {
        width: 100px;
    }

    .thick-green-border {
        border-color: darkblue;
        border-width: 2px;
        border-style: solid;
        border-radius: 2%;
    }

    .thick-green-border2 {
        border-color: darkgreen;
        border-width: 2px;
        border-style: solid;
        border-radius: 2%;
    }
</style>

<div class="container" style="margin-top:10%">
    @foreach (var item in Model)
    {
        if (item.respuestaDeSoporte == true)
        {
            <div class="azul">
                <div class="row">
                    <div class="col-md-4">
                        <p>
                            <a href="#"><img class="smaller-image thick-green-border" src="https://img2.freepng.es/20181201/xwx/kisspng-technical-support-computer-icons-application-softw-5c02c5b352d088.0481706015436855553392.jpg" alt="A cute orange cat lying on its back."></a>
                        </p>
                        <p>
                            <strong>Respuesta de: </strong> @item.usuarioSoporte
                        </p>
                        <p>
                            <strong>Fecha Respuesta: </strong>@item.fechaRespuesta
                        </p>
                        <p>
                            @if (item.resolvioProblema == true)
                            {
                                <strong>RESPUESTA QUE RESOLVIO EL PROBLEMA</strong>
                            }
                        </p>

                    </div>
                    <div class="col-md-8">

                        <center><strong> <h3 style="color:darkslategrey">Respuesta de Soporte Tecnico</h3></strong></center>
                        <p>
                            @item.comentario
                        </p>
                    </div>
                    <p></p>
                    <p></p>

                </div>

            </div>
        }
        else
        {
            <div class="verde">
                <div class="row">
                    <div class="col-md-4">
                        <p>
                            <a href="#"><img class="smaller-image thick-green-border2" src="https://previews.123rf.com/images/stalkerstudent/stalkerstudent1601/stalkerstudent160101173/50961996-vector-icono-de-usuario-estilo-de-dise%C3%B1o-plano-eps-10.jpg" alt="A cute orange cat lying on its back."></a>
                        </p>
                        <p>
                            <strong>Respuesta de: </strong> @item.usuarioSoporte
                        </p>
                        <p>
                            <strong>Fecha Respuesta: </strong>@item.fechaRespuesta
                        </p>

                    </div>
                    <div class="col-md-8">

                        <center><strong> <h3 style="color:darkslategrey">Respuesta de Usuario</h3></strong></center>
                        <p>
                            @item.comentario
                        </p>
                    </div>
                </div>
            </div>
        }
    }

</div>




<div class="panel-group">
    <div class="panel panel-default">
        <div class="panel-heading">
            <h4 class="panel-title">
                <a data-toggle="collapse" href="#collapse1">Enviar Respuesta</a>
            </h4>
        </div>
        <div id="collapse1" class="panel-collapse collapse">
            <div class="panel-body">
                @if (TempData["hayRespuestaValida"].Equals(true))
                {
                    <strong> <h2>Este insidente ya se encuentra cerrado</h2>  </strong>
                }
                else
                {
                    Html.RenderPartial("crearrespuestaAdmin", new respuestaModelo());
                }



            </div>
            <div class="panel-footer"></div>
        </div>
    </div>
</div>