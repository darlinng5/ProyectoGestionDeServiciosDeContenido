<link href="~/Content/DataTables/components.css" rel="stylesheet" />


<div title="Click para Cerrar" id="carga" style="cursor:pointer;border-radius:0px;-moz-border-radius:0px;-webkit-border-radius:0px;box-shadow:inset #696763 0px 0px 14px;background-position:center;background-size:100%;width:100%;color:#fff;text-align:center;height:100%;padding:52px 12px 12px 12px;position:fixed;z-index:6;">
    <img AlternateText="Loading" src="https://pa1.narvii.com/6707/20576190733bb67e82c266681eaa9916a3960290_hq.gif" />
</div>




<body>
    <div class="row">
        <div class="col-md-12">
            <div class="portlet box blue">
                <div class="portlet-title">
                    <div class="caption">
                        <i class="fa fa-user"></i>Clientes
                    </div>
                    <div class="tools">
                        <a href="javascript:;" class="collapse"> </a>
                        <a href="javascript:;" class="fullscreen"> </a>
                    </div>
                    <div class="actions">
                        <div class="inputs pull-right">
                        </div>
                    </div>
                </div>
                <div class="portlet-body">


                    <table id="datatable" class="table table-striped table-bordered table-responsive" cellspacing="0" width="100%">
                        <thead>
                            <tr>
                                <th>Cliente</th>
                                <th>Nombre</th>
                                <th>Usuario</th>
                                <th>Orden</th>
                                <th>Codigo</th>
                                <th>Inicio</th>
                                <th>Fin</th>
                                <th>Monto</th>
                                <th>Estado</th>
                                <th>Obs.</th>
                                <th>Accion</th>
                            </tr>
                        </thead>
                        <tfoot>
                            <tr>
                                <th>Cliente</th>
                                <th>Nombre</th>
                                <th>Usuario</th>
                                <th>Orden</th>
                                <th>Codigo</th>
                                <th>Inicio</th>
                                <th>Fin</th>
                                <th>Monto</th>
                                <th>Estado</th>
                                <th>Obs.</th>
                                <th>Accion</th>
                            </tr>
                        </tfoot>
                        <tbody>
                            @foreach (var item in Model)
                            {
                            <tr class="Search">
                                <td>
                                    @Html.DisplayFor(modelItem => item.idUsuarioCliente)
                                </td>
                                <td>
                                    @Html.DisplayFor(modelItem => item.usuarioNombre)
                                </td>
                                <td>
                                    @Html.DisplayFor(modelItem => item.idUsuarioCreo)
                                </td>
                                <td>
                                    @Html.DisplayFor(modelItem => item.idCompra)
                                </td>
                                <td>
                                    @Html.DisplayFor(modelItem => item.codigoGuid)
                                </td>
                                <td>
                                    @Html.DisplayFor(modelItem => item.fechaInicio)
                                </td>
                                <td>
                                    @Html.DisplayFor(modelItem => item.fechaFin)
                                </td>
                                <td>
                                    @Html.DisplayFor(modelItem => item.montoBono)
                                </td>
                                <td>
                                    @Html.DisplayFor(modelItem => item.estado)
                                </td>
                                <td>
                                    @Html.DisplayFor(modelItem => item.descripcion)
                                </td>
                                <td>
                                    @Html.ActionLink("Modificar", "modificarbonocliente", new { id = item.id }, new { @class = "btn btn-success btn-xs " })
                                    @Html.ActionLink("Ver", "vermodificacionesbonos", new { id = item.id }, new { @class = "btn btn-danger btn-xs " })
                                </td>
                            </tr>
                            }

                        </tbody>
                    </table>

                </div>
            </div>
        </div>
    </div>
    <div class="modal fade" id="edit" tabindex="-1" role="dialog" aria-labelledby="edit" aria-hidden="true">
        <div class="modal-dialog">
            <div class="modal-content">
                <div class="modal-header">
                    <button type="button" class="close" data-dismiss="modal" aria-hidden="true">×</button>
                    <h4 class="modal-title custom_align" id="Heading">Edit Your Detail</h4>
                </div>
                <div class="modal-body">
                    <div class="form-group">
                        <input class="form-control " type="text" placeholder="Tiger Nixon">
                    </div>
                    <div class="form-group">

                        <input class="form-control " type="text" placeholder="System Architect">
                    </div>
                    <div class="form-group">


                        <input class="form-control " type="text" placeholder="Edinburgh">

                    </div>
                </div>
                <div class="modal-footer ">
                    <button type="button" class="btn btn-warning btn-lg" style="width: 100%;"><span class="glyphicon glyphicon-ok-sign"></span> Update</button>
                </div>
            </div>
            <!-- /.modal-content -->
        </div>
        <!-- /.modal-dialog -->
    </div>



    <div class="modal fade" id="delete" tabindex="-1" role="dialog" aria-labelledby="edit" aria-hidden="true">
        <div class="modal-dialog">
            <div class="modal-content">
                <div class="modal-header">
                    <button type="button" class="close" data-dismiss="modal" aria-hidden="true">×</button>
                    <h4 class="modal-title custom_align" id="Heading">Delete this entry</h4>
                </div>
                <div class="modal-body">

                    <div class="alert alert-danger"><span class="glyphicon glyphicon-warning-sign"></span> Are you sure you want to delete this Record?</div>

                </div>
                <div class="modal-footer ">
                    <button type="button" class="btn btn-success"><span class="glyphicon glyphicon-ok-sign"></span> Yes</button>
                    <button type="button" class="btn btn-default" data-dismiss="modal"><span class="glyphicon glyphicon-remove"></span> No</button>
                </div>
            </div>
            <!-- /.modal-content -->
        </div>
        <!-- /.modal-dialog -->
    </div>
</body>


<script>

    $(document).ready(function () {
        $('#datatable').dataTable();

        $("[data-toggle=tooltip]").tooltip();

    });
</script>

<script type="text/javascript">
    function cargando() {
        $("#carga").animate({ "opacity": "1" }, 1000, function () { $("#carga").css("display", "Block"); });

    }

    function cerrar() {
        $("#carga").animate({ "opacity": "0" }, 1000, function () { $("#carga").css("display", "none"); });
    }

    $(document).ready(function () {
        window.onload = cerrar;
        $("#carga").click(function () { cerrar(); });
        window.onbeforeunload = cargando;
    });
</script>


