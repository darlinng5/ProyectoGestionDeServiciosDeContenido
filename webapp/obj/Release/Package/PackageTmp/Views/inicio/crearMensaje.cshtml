@model SmartAdminMvc.Models.mensajeContactoModelo





        <!-- Main -->
        <article id="main">

            <header class="special container">
                <span class="icon fa-envelope"></span>
                <h2>Contactanos</h2>
                <p>Usa el siguiente formulario para ponerte en contacto con nosotros</p>
            </header>

            <!-- One -->
            <section class="wrapper style4 special container medium">

                <!-- Content -->
                <div class="content">



                    @using (Html.BeginForm("crearmensaje", "inicio", FormMethod.Post, new { @class = "form-horizontal", role = "form" }))
                    {
                        @Html.AntiForgeryToken()

                    <div class="form-horizontal">


                        <div class="row gtr-50">
                            <div class="col-6 col-12-mobile">
                                @Html.EditorFor(model => model.nombreCliente, new { htmlAttributes = new { @class = "form-control", placeholder = "*Nombre", @required = "required" } })
                                @Html.ValidationMessageFor(model => model.nombreCliente, "", new { @class = "text-danger" })
                            </div>
                            <div class="col-6 col-12-mobile">
                                @Html.EditorFor(model => model.correo, new { htmlAttributes = new { @class = "form-control", placeholder = "*Correo", @required = "required" } })
                                @Html.ValidationMessageFor(model => model.correo, "", new { @class = "text-danger" })
                            </div>
                            <div class="col-6 col-12-mobile">
                                @Html.EditorFor(model => model.asunto, new { htmlAttributes = new { @class = "form-control", placeholder = "Asunto", @required = "required" } })
                                @Html.ValidationMessageFor(model => model.asunto, "", new { @class = "text-danger" })
                            </div>
                            <div class="col-6 col-12-mobile">
                                @Html.EditorFor(model => model.telefono, new { htmlAttributes = new { @class = "form-control", placeholder = "*Telefono", @required = "required" } })
                                @Html.ValidationMessageFor(model => model.telefono, "", new { @class = "text-danger" })
                            </div>
                            <div class="col-12">
                                @Html.EditorFor(model => model.mensaje, new { htmlAttributes = new { @class = "form-control", placeholder = "*Mensaje", @required = "required", @style = "height:280px" } })
                                @Html.ValidationMessageFor(model => model.mensaje, "", new { @class = "text-danger" })
                            
                            </div>
                            <div class="col-12">

                                <div class="form-group">
                                    <div class="col-md-offset-2 col-md-10">
                                        <input type="submit" value="Guardar" class="btn btn-default" />
                                    </div>
                                </div>
                               

                            </div>
                        </div>







                        
                    </div>
                    }


                </div>

            </section>

        </article>


   


